<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="8dp">

        <android.support.v7.widget.CardView
            android:id="@+id/cv_subcat"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_margin="5dp"
            app:cardBackgroundColor="@android:color/white">

            <ImageView
                android:id="@+id/iv_category_image"
                android:layout_width="match_parent"
                android:padding="2dp"
                android:scaleType="centerInside"
                android:layout_height="match_parent"
                android:src="@drawable/ic_phaduskitchen" />

            <TextView
                android:id="@+id/tv_name_initials"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="0dp"
                android:gravity="center"
                android:maxLines="1"
                android:padding="6dp"
                android:textAllCaps="true"
                android:textColor="#fff"
                android:textSize="20sp" />
        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/tv_sub_cat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:layout_toEndOf="@id/cv_subcat"
            android:layout_toLeftOf="@id/iv_arrow_reference"
            android:layout_toRightOf="@id/cv_subcat"
            android:layout_toStartOf="@id/iv_arrow_reference"
            android:maxLines="2"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="Sub category"
            android:textColor="@color/colorGrayDark"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv_sub_cat"
            android:layout_alignStart="@id/tv_sub_cat"
            android:layout_below="@id/tv_sub_cat"
            android:layout_toEndOf="@id/cv_subcat"
            android:layout_toLeftOf="@id/iv_arrow_reference"
            android:layout_toRightOf="@id/cv_subcat"
            android:layout_toStartOf="@id/iv_arrow_reference"
            android:maxLines="2"
            android:paddingBottom="6dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="4dp"
            android:textColor="@color/colorGrayDark"
            android:textSize="10sp" />


        <ImageView
            android:id="@+id/iv_arrow_reference"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:src="@drawable/ic_arrow" />

    </RelativeLayout>
</android.support.v7.widget.CardView>