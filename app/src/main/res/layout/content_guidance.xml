<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/content_padding_large"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activity.Guidance"
    tools:showIn="@layout/activity_guidance">

    <android.support.v7.widget.CardView
        android:id="@+id/cv_education"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:layout_marginTop="@dimen/content_padding_small"
        android:background="@android:color/transparent"
        app:cardCornerRadius="4dp">

        <ImageView
            android:id="@+id/iv_education"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:scaleType="fitXY"
            android:layout_height="match_parent"
            android:src="@drawable/ic_education_banner" />

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cv_career"
        android:layout_marginTop="@dimen/content_padding_small"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        app:cardCornerRadius="4dp">

        <ImageView
            android:id="@+id/iv_career"
            android:layout_width="match_parent"
            android:scaleType="fitXY"
            android:layout_gravity="center"
            android:layout_height="match_parent"
            android:src="@drawable/ic_career" />

    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:id="@+id/cv_business"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/content_padding_small"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        app:cardCornerRadius="4dp">

        <ImageView
            android:id="@+id/iv_business"
            android:layout_width="match_parent"
            android:scaleType="fitXY"
            android:layout_gravity="center"
            android:layout_height="match_parent"
            android:src="@drawable/ic_business" />

    </android.support.v7.widget.CardView>

</LinearLayout>
