                    android:paddingTop="8dp">

                    <TextView
                        style="@style/StyleTextViewLevelHeading"
                        android:text="Level 6" />


                    <TextView
                        style="@style/StyleTextViewLevelHeading"
                        android:paddingBottom="0dp"
                        android:paddingTop="0dp"
                        android:text="Maximum Reward at this level" />

