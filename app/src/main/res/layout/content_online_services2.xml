<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/content_padding_large"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activity.OnlineServices"
    tools:showIn="@layout/activity_online_services2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <android.support.v7.widget.CardView
            android:id="@+id/cv_ticket_booking"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/content_padding_medium"
            android:layout_weight="1"
            app:cardCornerRadius="4dp">

            <ImageView
                android:id="@+id/iv_ticket_booking"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_ticket_booking" />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cv_online_shopping"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/content_padding_medium"
            android:layout_weight="1"
            app:cardCornerRadius="4dp">

            <ImageView
                android:id="@+id/iv_online_shopping"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_online_shopping" />

        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:id="@+id/cv_bill_payment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/content_padding_medium"
            android:layout_weight="1"
            app:cardCornerRadius="4dp">

            <ImageView
                android:id="@+id/iv_bill_payment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_bill_payment" />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cv_online_games"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/content_padding_medium"
            android:layout_weight="1"
            app:cardCornerRadius="4dp">

            <ImageView
                android:id="@+id/iv_online_games"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_online_games" />

        </android.support.v7.widget.CardView>


    </LinearLayout>
</ScrollView>
