<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <TextView
        android:id="@+id/tv_game_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/opensans_regular"
        android:padding="2sp"
        android:text="Title"
        android:textColor="@color/colorGrayDark"
        android:textSize="14sp" />


    <TextView
        android:id="@+id/tv_txn_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_game_name"
        android:fontFamily="@font/opensans_regular"
        android:padding="2sp"
        android:text="Amount"
        android:textColor="@color/colorGrayDark"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_txn_amount"
        android:layout_marginTop="5dp"
        android:layout_toLeftOf="@id/tv_txn_status"
        android:layout_toStartOf="@id/tv_txn_status"
        android:fontFamily="@font/opensans_regular"
        android:padding="2sp"
        android:text="@string/grow_your_network"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_txn_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/tv_date"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:padding="2sp"
        android:text="Success"
        android:textSize="14sp"
        tools:ignore="RtlHardcoded" />

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="8dp"
        android:padding="2sp"
        android:text="29 July"
        android:textSize="14sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/tv_summary"
        android:layout_marginTop="15dp"
        android:background="@color/colorPrimaryDark" />
</RelativeLayout>

