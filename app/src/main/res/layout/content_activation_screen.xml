<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/StyleScrollView"
    android:background="@drawable/img_background"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activity.ActivateAccAct"
    tools:showIn="@layout/activity_activate_acc">

    <LinearLayout style="@style/LinearLayoutBasic">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    style="@style/StyleTextView"
                    android:layout_margin="4dp"
                    android:fontFamily="@font/roboto_medium"
                    android:padding="0dp"
                    android:text="@string/text_pay_activation"
                    android:textColor="@color/colorGrayDark"
                    android:textSize="11sp" />

                <TextView
                    style="@style/StyleTextView"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="0dp"
                    android:fontFamily="@font/roboto_bold"
                    android:shadowColor="#b3b2b2"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="2"
                    android:text="Activation Charge"
                    android:textColor="@color/colorDetailText"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tv_activation_amount"
                    style="@style/StyleTextView"
                    android:fontFamily="@font/blackoak"
                    android:paddingTop="12dp"
                    android:layout_margin="0dp"
                    android:paddingBottom="12dp"
                    android:textColor="@color/colorAccent"
                    android:textSize="18sp" />

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <Button
            android:id="@+id/btn_pay"
            style="@style/StyleButtonBlue"
            android:layout_marginTop="20dp"
            android:text="Pay Now" />


        <TextView
            android:id="@+id/tv_addiction_world"
            style="@style/StyleTextView"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/roboto_bold"
            android:shadowColor="#b3b2b2"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/tv_membership"
            style="@style/StyleTextView"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/roboto_bold"
            android:textColor="@android:color/white" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@android:color/transparent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_xbox" />

                    <TextView
                        style="@style/StyleTextViewSmall"
                        android:text="@string/string_xbox_fee" />

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@android:color/transparent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_play_station" />

                    <TextView
                        style="@style/StyleTextViewSmall"
                        android:text="@string/string_ps_fee" />

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@android:color/transparent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_kinet" />

                    <TextView
                        style="@style/StyleTextViewSmall"
                        android:text="@string/string_knite_fee" />
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
