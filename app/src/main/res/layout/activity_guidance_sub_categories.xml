<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_bg">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            app:title="Guidance"
            app:titleTextColor="@color/colorAccent" />

    </android.support.design.widget.AppBarLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rl_logged_in_layout"
        android:layout_below="@id/app_bar">

        <LinearLayout
            android:id="@+id/ll_one"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/content_padding_small">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="8dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingTop="8dp">

                    <android.support.v7.widget.CardView
                        android:id="@+id/cv_subcat"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_margin="5dp"
                        app:cardBackgroundColor="@android:color/white">

                        <ImageView
                            android:id="@+id/iv_category_image"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_phaduskitchen" />

                    </android.support.v7.widget.CardView>

                    <TextView
                        android:id="@+id/tv_sub_cat"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@id/cv_subcat"
                        android:layout_toLeftOf="@+id/iv_arrow_reference"
                        android:layout_toRightOf="@id/cv_subcat"
                        android:layout_toStartOf="@+id/iv_arrow_reference"
                        android:maxLines="2"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:text="Sub category"
                        android:textColor="@color/colorGrayDark"
                        android:textSize="16sp" />


                    <ImageView
                        android:id="@+id/iv_arrow_reference"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:padding="10dp"
                        android:src="@drawable/ic_arrow" />

                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="8dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingTop="8dp">

                    <android.support.v7.widget.CardView
                        android:id="@+id/cv_subcat2"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_margin="5dp"
                        app:cardBackgroundColor="@android:color/white">

                        <ImageView
                            android:id="@+id/iv_category_image2"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_phaduskitchen" />

                    </android.support.v7.widget.CardView>

                    <TextView
                        android:id="@+id/tv_sub_cat2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@id/cv_subcat2"
                        android:layout_toLeftOf="@+id/iv_arrow_reference2"
                        android:layout_toRightOf="@id/cv_subcat2"
                        android:layout_toStartOf="@+id/iv_arrow_reference2"
                        android:maxLines="2"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:text="Sub category"
                        android:textColor="@color/colorGrayDark"
                        android:textSize="16sp" />


                    <ImageView
                        android:id="@+id/iv_arrow_reference2"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:padding="10dp"
                        android:src="@drawable/ic_arrow" />

                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="8dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingTop="8dp">

                    <android.support.v7.widget.CardView
                        android:id="@+id/cv_subcat3"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_margin="5dp"
                        app:cardBackgroundColor="@android:color/white">

                        <ImageView
                            android:id="@+id/iv_category_image3"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/ic_phaduskitchen" />

                    </android.support.v7.widget.CardView>

                    <TextView
                        android:id="@+id/tv_sub_cat3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@id/cv_subcat3"
                        android:layout_toLeftOf="@+id/iv_arrow_reference3"
                        android:layout_toRightOf="@id/cv_subcat3"
                        android:layout_toStartOf="@+id/iv_arrow_reference3"
                        android:maxLines="2"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:text="Sub category"
                        android:textColor="@color/colorGrayDark"
                        android:textSize="16sp" />


                    <ImageView
                        android:id="@+id/iv_arrow_reference3"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:padding="10dp"
                        android:src="@drawable/ic_arrow" />

                </RelativeLayout>
            </android.support.v7.widget.CardView>


        </LinearLayout>

        <Button
            android:id="@+id/btn_chat"
            style="@style/StyleButtonBlue"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:layout_marginBottom="15dp"
            android:background="@drawable/button_chat"
            android:text="Chat"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_btn" />
    </RelativeLayout>

</RelativeLayout>