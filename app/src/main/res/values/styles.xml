<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorControlNormal">@color/colorAccent</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_arrow_right</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppThemeWhite" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorControlNormal">#fff</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorTextHint</item>
    </style>

    <style name="AppThemeGray" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorControlNormal">#d2d1d1</item>
        <item name="colorPrimary">#000</item>
        <item name="colorPrimaryDark">#000</item>
        <item name="colorAccent">#d2d1d1</item>
        <item name="colorControlActivated">#b9b8b8</item>
    </style>


    <style name="LinearLayoutBasic">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="StyleEditText">
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:fontFamily">@font/opensans_regular</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:textSize">@dimen/text_hint</item>
        <item name="android:theme">@style/AppThemeWhite</item>
        <item name="android:textColorHint">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/colorTextHint</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="StyleEditTextUpdatePro">
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">14dp</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:fontFamily">@font/opensans_regular</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:textSize">@dimen/text_hint</item>
        <item name="android:theme">@style/AppThemeGray</item>
        <item name="android:textColorHint">@color/colorDetailText</item>
        <item name="android:textColor">@color/colorGrayDark</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>


    <style name="StyleTIL">
        <item name="android:layout_marginLeft">35dp</item>
        <item name="android:layout_marginRight">35dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginBottom">6dp</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textColorHint">@color/colorTextHint</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:theme">@style/AppThemeWhite</item>
    </style>

    <style name="StyleToolbar">
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:background">@drawable/et_box</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>


    <style name="StyleTextView">
        <item name="android:gravity">center</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:layout_marginRight">30dp</item>
        <item name="android:textColor">@color/colorTextHint</item>
        <item name="android:textSize">@dimen/text_hint</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="StyleTextViewSmall">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">10sp</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:shadowDx">1</item>
        <item name="android:padding">5dp</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowColor">#bcbaba</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="StyleTextViewLevel">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorGrayDark</item>
        <item name="android:textSize">12sp</item>
        <item name="android:paddingLeft">6dp</item>
        <item name="android:paddingRight">3dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:fontFamily">@font/opensans_regular</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="StyleTextViewHomeBanner1">
        <item name="android:gravity">center</item>
        <item name="android:textColor">#FFD92E</item>
        <item name="android:textSize">15sp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="StyleTextViewHomeBanner2">
        <item name="android:gravity">center</item>
        <item name="android:textColor">#FFD92E</item>
        <item name="android:textSize">18sp</item>
        <item name="android:shadowDx">-4</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowColor">@android:color/white</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:shadowRadius">4</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="StyleTextViewLevelHeading">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingLeft">6dp</item>
        <item name="android:paddingRight">6dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:fontFamily">@font/opensans_bold</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>


    <style name="StyleTextViewHomeOptions">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">10sp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:fontFamily">@font/opensans_regular</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>


    <style name="StyleImageViewHomeOptions">
        <item name="android:layout_margin">8dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_width">45dp</item>
    </style>

    <style name="StyleTextViewHeading">
        <item name="android:gravity">center</item>
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:layout_marginRight">30dp</item>
        <item name="android:layout_marginTop">55dp</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowColor">#000</item>
        <item name="android:shadowRadius">4</item>
        <item name="android:textColor">@color/colorTextHint</item>
        <item name="android:textSize">40sp</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="StyleTextViewHowItWorkHeading">
        <item name="android:gravity">center</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/opensans_semibold</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="StyleTextViewHowItWorkDescription">
        <item name="android:textColor">#ffffff</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:fontFamily">@font/opensans_semibold</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="StyleButton">
        <item name="android:gravity">center</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:layout_marginRight">30dp</item>
        <item name="android:textColor">@color/colorTextHint</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="StyleButtonGradient">
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_width">166dp</item>
        <item name="android:textSize">16dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:background">@drawable/button_gradient</item>
        <item name="android:textColor">@color/colorTextHint</item>
        <item name="android:layout_marginTop">6dp</item>

    </style>

    <style name="StyleButtonBlue">
        <item name="android:gravity">center</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_width">166dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:background">@drawable/button_chat</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_marginTop">6dp</item>

    </style>

    <style name="StyleScrollView">

        <item name="android:layout_width">match_parent</item>
        <item name="android:scrollbars">none</item>
        <item name="android:layout_height">match_parent</item>
    </style>


    <style name="NewDialogWhite">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:theme">@style/AppThemeWhite</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="NewDialogBlue">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:theme">@style/AppTheme</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:background">@android:color/transparent</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>
